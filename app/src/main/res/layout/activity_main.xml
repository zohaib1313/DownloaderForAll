<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:layout_marginBottom="10dp"
        android:id="@+id/etUrl"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint=" url:" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:progressTint="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

  <TextView android:id="@+id/textViewProgressOne"
      android:text="progeess"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

    <Button
        android:layout_gravity="center"
        android:text="Start Downloading"
        android:id="@+id/btnStartDownloading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

   <Button
       android:layout_gravity="center"
android:id="@+id/btnPauseDownloading"
       android:text="pause downloading"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />


    <Button
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="Cancel Downloading"
        android:id="@+id/btnCancelDownloading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>